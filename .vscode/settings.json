{
    "C_Cpp.intelliSenseEngine": "disabled",
    "terminal.integrated.profiles.windows": {
        "mPowerShell": {
            "source": "PowerShell",
            "args": ["-NoExit", "-Command ", "[System.Console]::OutputEncoding = [System.Text.Encoding]::UTF8; [System.Console]::InputEncoding = [System.Text.Encoding]::UTF8"],
        },
        "MSYS2 UCRT": {
            "path": "cmd.exe",
            "args": [
                "/c",
                "C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -ucrt64"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "mPowerShell",
    "cmake.options.statusBarVisibility": "hidden",
    "C_Cpp.autoAddFileAssociations": false,
    "clangd.arguments": [
        "--header-insertion=never"
    ],
    "terminal.integrated.env.windows": {
        "PATH": "${env:MSYS2_PATH};${env:PATH}"
    },
    "cmake.cmakePath": "${env:MSYS2_ROOT}\\ucrt64\\bin\\cmake",
    "cmake.configureEnvironment": {
        "PATH": "${env:MSYS2_PATH};${env:PATH}"
    },
    "cmake.buildEnvironment": {
        "PATH": "${env:MSYS2_PATH};${env:PATH}"
    }
}
